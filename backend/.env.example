# Environment (local/prod)
ENV=prod

# MySQL Configuration
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=electricity_bot_bd
MYSQL_USER=user
MYSQL_PASSWORD=password

DATABASE_URL=mysql+pymysql://user:password@mysql:3306/electricity_bot_bd

# JWT secret for Flask
JWT_SECRET_KEY=jwt_secret

# SMTP email settings
SMTP_EMAIL=email@example.com
SMTP_PASSWORD=smtp_password

# Keycloak internal service URL (used inside Docker)
KEYCLOAK_URL=http://keycloak:8080

# Keycloak public URL (used by browser and mobile app)
KEYCLOAK_PUBLIC_URL=https://domain.com

# Redirect URIs used in Keycloak Identity Provider
KEYCLOAK_REDIRECT_URI_WEB=https://domain.com/callback
KEYCLOAK_REDIRECT_URI_MOBILE=https://domain.com/mobile-callback

# Keycloak realm and clients
KEYCLOAK_REALM=electricity-bot
KEYCLOAK_CLIENT_ID_WEB=electricity-web-client
KEYCLOAK_CLIENT_ID_MOBILE=electricity-mobile-client
KEYCLOAK_CLIENT_SECRET_WEB=web_client_secret
KEYCLOAK_CLIENT_SECRET_MOBILE=mobile_client_secret

# Keycloak admin credentials 
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Google OAuth credentials (used in Keycloak Identity Provider)
GOOGLE_CLIENT_ID=google_client_id
GOOGLE_CLIENT_SECRET=google_client_secret
